@model Assignment
<form method="post">
    @Html.HiddenFor(x => x.AssignmentDueDate)
    @Html.HiddenFor(x => x.AssignmentId)
    @Html.HiddenFor(x => x.AssignedUserName)
    @Html.HiddenFor(x => x.AssignmentDescription)
    <h4>Update Task @Model.AssignmentId Completion Status Here:</h4>
    <label>Complete:</label><input type="radio" name="AssignmentCompletionStatus" value="true" required />
    <label>Incomplete:</label><input type="radio" name="AssignmentCompletionStatus" value="false" required />

    <input type="submit" value="Submit Changes" />
</form>